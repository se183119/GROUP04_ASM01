<Window x:Class="GROUP04WPF.CoachDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coach Dashboard - Smoking Cessation Platform" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3B6C">
            <Grid>
                <TextBlock Name="lblWelcome" Text="Welcome, Coach!" 
                          FontSize="20" FontWeight="Bold" Foreground="White"
                          VerticalAlignment="Center" HorizontalAlignment="Left" 
                          Margin="20,0,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
                    <Button Name="btnProfile" Content="Profile" Margin="10,0" Padding="10,5"
                           Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnLogout" Content="Logout" Margin="10,0" Padding="10,5"
                           Background="#F44336" Foreground="White" BorderThickness="0"
                           Click="btnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Menu -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <Button Name="btnDashboard" Content="Dashboard" Margin="5" Padding="10"
                           Background="#2196F3" Foreground="White" BorderThickness="0"
                           Click="btnDashboard_Click"/>
                    <Button Name="btnSessions" Content="My Sessions" Margin="5" Padding="10"
                           Background="#9C27B0" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnSchedule" Content="Schedule" Margin="5" Padding="10"
                           Background="#FF9800" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnMembers" Content="My Members" Margin="5" Padding="10"
                           Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnRatings" Content="Reviews & Ratings" Margin="5" Padding="10"
                           Background="#607D8B" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnResources" Content="Resources" Margin="5" Padding="10"
                           Background="#795548" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Border>
            
            <!-- Main Content Area -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Name="MainContent" Margin="20">
                    <!-- Dashboard Overview -->
                    <TextBlock Text="Coach Dashboard Overview" FontSize="24" FontWeight="Bold" 
                              Foreground="#2E3B6C" Margin="0,0,0,20"/>
                    
                    <!-- Stats Cards -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Total Members -->
                        <Border Grid.Column="0" Background="#4CAF50" Padding="20" Margin="0,0,10,0" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Active Members" FontSize="14" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Name="lblActiveMembers" Text="0" FontSize="36" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Sessions This Week -->
                        <Border Grid.Column="1" Background="#2196F3" Padding="20" Margin="5,0" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Sessions This Week" FontSize="14" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Name="lblSessionsThisWeek" Text="0" FontSize="36" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Success Rate -->
                        <Border Grid.Column="2" Background="#FF9800" Padding="20" Margin="5,0" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Success Rate" FontSize="14" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Name="lblSuccessRate" Text="0%" FontSize="36" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Average Rating -->
                        <Border Grid.Column="3" Background="#9C27B0" Padding="20" Margin="10,0,0,0" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Average Rating" FontSize="14" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Name="lblAverageRating" Text="0.0" FontSize="36" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Today's Schedule -->
                    <TextBlock Text="Today's Schedule" FontSize="18" FontWeight="Bold" 
                              Foreground="#2E3B6C" Margin="0,0,0,15"/>
                    
                    <Border Background="White" Padding="20" Margin="0,0,0,30"
                           BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="No sessions scheduled for today" FontSize="14" 
                                      Foreground="#666" HorizontalAlignment="Center"/>
                            <Button Content="View Full Schedule" Background="#2196F3" Foreground="White" 
                                   BorderThickness="0" Padding="10,5" Margin="0,10,0,0"
                                   HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Recent Member Activity -->
                    <TextBlock Text="Recent Member Progress" FontSize="18" FontWeight="Bold" 
                              Foreground="#2E3B6C" Margin="0,0,0,15"/>
                    
                    <Border Background="White" Padding="20" Margin="0,0,0,30"
                           BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Member" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Grid.Column="1" Text="Progress" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Grid.Column="2" Text="Last Session" FontWeight="Bold" FontSize="14"/>
                            </Grid>
                            
                            <Border Height="1" Background="#E0E0E0" Margin="0,10"/>
                            
                            <TextBlock Text="No recent member activity" FontSize="14" 
                                      Foreground="#666" HorizontalAlignment="Center" Margin="0,20"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Quick Actions -->
                    <TextBlock Text="Quick Actions" FontSize="18" FontWeight="Bold" 
                              Foreground="#2E3B6C" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="White" Padding="20" Margin="0,0,10,0" 
                               BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="📅" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="Schedule Session" FontSize="14" FontWeight="Bold" 
                                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <Button Content="Add Session" Background="#4CAF50" Foreground="White" 
                                       BorderThickness="0" Padding="10,5"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="1" Background="White" Padding="20" Margin="5,0" 
                               BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="📊" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="View Reports" FontSize="14" FontWeight="Bold" 
                                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <Button Content="View Reports" Background="#2196F3" Foreground="White" 
                                       BorderThickness="0" Padding="10,5"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="2" Background="White" Padding="20" Margin="10,0,0,0" 
                               BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="💬" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="Message Member" FontSize="14" FontWeight="Bold" 
                                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <Button Content="Send Message" Background="#9C27B0" Foreground="White" 
                                       BorderThickness="0" Padding="10,5"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>