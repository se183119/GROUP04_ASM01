<Window x:Class="GROUP04WPF.GuestDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smoking Cessation Platform - Guest View" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3B6C">
            <Grid>
                <TextBlock Text="Smoking Cessation Support Platform - Guest View" 
                          FontSize="20" FontWeight="Bold" Foreground="White"
                          VerticalAlignment="Center" HorizontalAlignment="Left" 
                          Margin="20,0,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
                    <Button Name="btnRegister" Content="Register" Margin="10,0" Padding="10,5"
                           Background="#4CAF50" Foreground="White" BorderThickness="0"
                           Click="btnRegister_Click"/>
                    <Button Name="btnLogin" Content="Login" Margin="10,0" Padding="10,5"
                           Background="#2196F3" Foreground="White" BorderThickness="0"
                           Click="btnLogin_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Welcome Section -->
                <Border Background="#F5F5F5" Padding="20" Margin="0,0,0,20" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Welcome to Your Journey to Freedom" FontSize="24" FontWeight="Bold" 
                                  Foreground="#2E3B6C" Margin="0,0,0,10"/>
                        <TextBlock Text="Join thousands of people who have successfully quit smoking with our comprehensive support platform."
                                  FontSize="14" TextWrapping="Wrap" Margin="0,0,0,20"/>
                        <Button Name="btnGetStarted" Content="Get Started - Register Now" 
                               Background="#4CAF50" Foreground="White" BorderThickness="0"
                               Padding="20,10" FontSize="16" FontWeight="Bold"
                               Click="btnRegister_Click"/>
                    </StackPanel>
                </Border>
                
                <!-- Features Section -->
                <TextBlock Text="Platform Features" FontSize="20" FontWeight="Bold" 
                          Foreground="#2E3B6C" Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Feature 1 -->
                    <Border Grid.Column="0" Background="White" Padding="15" Margin="0,0,10,20" 
                           BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="📊" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Progress Tracking" FontSize="16" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Monitor your daily progress, track smoking incidents, and see your improvements over time."
                                      TextWrapping="Wrap" TextAlignment="Center" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Feature 2 -->
                    <Border Grid.Column="1" Background="White" Padding="15" Margin="5,0,5,20" 
                           BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="🏆" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Achievement System" FontSize="16" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Earn badges and achievements as you reach important milestones in your quit journey."
                                      TextWrapping="Wrap" TextAlignment="Center" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Feature 3 -->
                    <Border Grid.Column="2" Background="White" Padding="15" Margin="10,0,0,20" 
                           BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="👥" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Coach Support" FontSize="16" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Get professional guidance from certified smoking cessation coaches."
                                      TextWrapping="Wrap" TextAlignment="Center" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Success Stories Section -->
                <TextBlock Text="Success Stories" FontSize="20" FontWeight="Bold" 
                          Foreground="#2E3B6C" Margin="0,20,0,15"/>
                
                <Border Background="White" Padding="20" Margin="0,0,0,20" 
                       BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="&quot;I've been smoke-free for 6 months now thanks to this platform. The daily tracking and achievement system kept me motivated!&quot;"
                                  FontStyle="Italic" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="- Sarah M., 6 months smoke-free" FontWeight="Bold" 
                                  HorizontalAlignment="Right" Foreground="#666"/>
                    </StackPanel>
                </Border>
                
                <Border Background="White" Padding="20" Margin="0,0,0,20" 
                       BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="&quot;The coach sessions were incredibly helpful. Having someone to talk to during difficult moments made all the difference.&quot;"
                                  FontStyle="Italic" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="- John D., 1 year smoke-free" FontWeight="Bold" 
                                  HorizontalAlignment="Right" Foreground="#666"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>