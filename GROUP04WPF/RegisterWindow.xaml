<Window x:Class="GROUP04WPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Join the Smoking Cessation Platform" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3B6C">
            <Grid>
                <TextBlock Text="Join Your Journey to Freedom" 
                          FontSize="22" FontWeight="Bold" Foreground="White"
                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                <!-- Step Indicator -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Border Name="step1" Background="#4CAF50" Width="30" Height="30" CornerRadius="15" Margin="5">
                        <TextBlock Text="1" Foreground="White" FontWeight="Bold" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Background="#E0E0E0" Width="50" Height="2" VerticalAlignment="Center"/>
                    <Border Name="step2" Background="#E0E0E0" Width="30" Height="30" CornerRadius="15" Margin="5">
                        <TextBlock Text="2" Foreground="#666" FontWeight="Bold" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Background="#E0E0E0" Width="50" Height="2" VerticalAlignment="Center"/>
                    <Border Name="step3" Background="#E0E0E0" Width="30" Height="30" CornerRadius="15" Margin="5">
                        <TextBlock Text="3" Foreground="#666" FontWeight="Bold" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                
                <!-- Step 1: Personal Information -->
                <StackPanel Name="panelStep1" Visibility="Visible">
                    <TextBlock Text="Step 1: Personal Information" FontSize="20" FontWeight="Bold" 
                              Foreground="#2E3B6C" Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left Column -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Full Name *" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="txtFullName" Height="35" Padding="10,5" FontSize="14" 
                                    BorderBrush="#E0E0E0" BorderThickness="1"/>
                            
                            <TextBlock Text="Email Address *" FontSize="14" FontWeight="Bold" Margin="0,15,0,5"/>
                            <TextBox Name="txtEmail" Height="35" Padding="10,5" FontSize="14" 
                                    BorderBrush="#E0E0E0" BorderThickness="1"/>
                            
                            <TextBlock Text="Phone Number" FontSize="14" FontWeight="Bold" Margin="0,15,0,5"/>
                            <TextBox Name="txtTelephone" Height="35" Padding="10,5" FontSize="14" 
                                    BorderBrush="#E0E0E0" BorderThickness="1"/>
                        </StackPanel>
                        
                        <!-- Right Column -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Password *" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                            <PasswordBox Name="txtPassword" Height="35" Padding="10,5" FontSize="14" 
                                        BorderBrush="#E0E0E0" BorderThickness="1"/>
                            
                            <TextBlock Text="Confirm Password *" FontSize="14" FontWeight="Bold" Margin="0,15,0,5"/>
                            <PasswordBox Name="txtConfirmPassword" Height="35" Padding="10,5" FontSize="14" 
                                        BorderBrush="#E0E0E0" BorderThickness="1"/>
                            
                            <TextBlock Text="Date of Birth" FontSize="14" FontWeight="Bold" Margin="0,15,0,5"/>
                            <DatePicker Name="txtBirthDay" Height="35" FontSize="14" 
                                       BorderBrush="#E0E0E0" BorderThickness="1"/>
                        </StackPanel>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                        <Button Name="btnNext1" Content="Next: Choose Membership" 
                               Background="#4CAF50" Foreground="White" BorderThickness="0"
                               Padding="20,10" FontSize="14" FontWeight="Bold"
                               Click="btnNext1_Click"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Step 2: Membership Selection -->
                <StackPanel Name="panelStep2" Visibility="Collapsed">
                    <TextBlock Text="Step 2: Choose Your Membership" FontSize="20" FontWeight="Bold" 
                              Foreground="#2E3B6C" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Select a membership package that suits your needs:" 
                              FontSize="14" Margin="0,0,0,20"/>
                    
                    <Grid Name="membershipGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Membership packages will be loaded here dynamically -->
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                        <Button Name="btnBack2" Content="Back" 
                               Background="#9E9E9E" Foreground="White" BorderThickness="0"
                               Padding="15,10" FontSize="14" Margin="0,0,10,0"
                               Click="btnBack2_Click"/>
                        <Button Name="btnNext2" Content="Next: Smoking Profile" 
                               Background="#4CAF50" Foreground="White" BorderThickness="0"
                               Padding="20,10" FontSize="14" FontWeight="Bold"
                               Click="btnNext2_Click"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Step 3: Smoking Profile -->
                <StackPanel Name="panelStep3" Visibility="Collapsed">
                    <TextBlock Text="Step 3: Your Smoking Profile" FontSize="20" FontWeight="Bold" 
                              Foreground="#2E3B6C" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Help us understand your current smoking habits to personalize your experience:" 
                              FontSize="14" Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left Column -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Cigarettes per day" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="txtCigarettesPerDay" Height="35" Padding="10,5" FontSize="14" 
                                    BorderBrush="#E0E0E0" BorderThickness="1"/>
                            
                            <TextBlock Text="Money spent on cigarettes daily ($)" FontSize="14" FontWeight="Bold" Margin="0,15,0,5"/>
                            <TextBox Name="txtMoneySpentPerDay" Height="35" Padding="10,5" FontSize="14" 
                                    BorderBrush="#E0E0E0" BorderThickness="1"/>
                            
                            <TextBlock Text="Common smoking triggers" FontSize="14" FontWeight="Bold" Margin="0,15,0,5"/>
                            <TextBox Name="txtSmokingTriggers" Height="80" Padding="10,5" FontSize="14" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" TextWrapping="Wrap" 
                                    AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                        
                        <!-- Right Column -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Typical smoking times" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="txtSmokingTimes" Height="80" Padding="10,5" FontSize="14" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" TextWrapping="Wrap" 
                                    AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                            
                            <TextBlock Text="Additional notes" FontSize="14" FontWeight="Bold" Margin="0,15,0,5"/>
                            <TextBox Name="txtNotes" Height="80" Padding="10,5" FontSize="14" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" TextWrapping="Wrap" 
                                    AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                        <Button Name="btnBack3" Content="Back" 
                               Background="#9E9E9E" Foreground="White" BorderThickness="0"
                               Padding="15,10" FontSize="14" Margin="0,0,10,0"
                               Click="btnBack3_Click"/>
                        <Button Name="btnRegister" Content="Complete Registration" 
                               Background="#4CAF50" Foreground="White" BorderThickness="0"
                               Padding="20,10" FontSize="14" FontWeight="Bold"
                               Click="btnRegister_Click"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Cancel and Login Options -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
                    <TextBlock Text="Already have an account?" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Name="btnLogin" Content="Login Here" 
                           Background="Transparent" Foreground="#2196F3" BorderThickness="0"
                           FontSize="12" Cursor="Hand" Click="btnLogin_Click"/>
                    <TextBlock Text=" | " FontSize="12" VerticalAlignment="Center" Margin="10,0"/>
                    <Button Name="btnCancel" Content="Cancel" 
                           Background="Transparent" Foreground="#F44336" BorderThickness="0"
                           FontSize="12" Cursor="Hand" Click="btnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
