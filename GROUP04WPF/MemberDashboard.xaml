<Window x:Class="GROUP04WPF.MemberDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Member Dashboard - Smoking Cessation Platform" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3B6C">
            <Grid>
                <TextBlock Name="lblWelcome" Text="Welcome, Member!" 
                          FontSize="20" FontWeight="Bold" Foreground="White"
                          VerticalAlignment="Center" HorizontalAlignment="Left" 
                          Margin="20,0,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
                    <Button Name="btnProfile" Content="Profile" Margin="10,0" Padding="10,5"
                           Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnLogout" Content="Logout" Margin="10,0" Padding="10,5"
                           Background="#F44336" Foreground="White" BorderThickness="0"
                           Click="btnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Menu -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <Button Name="btnDashboard" Content="Dashboard" Margin="5" Padding="10"
                           Background="#2196F3" Foreground="White" BorderThickness="0"
                           Click="btnDashboard_Click"/>
                    <Button Name="btnQuitPlan" Content="My Quit Plan" Margin="5" Padding="10"
                           Background="#9C27B0" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnProgressTracking" Content="Progress Tracking" Margin="5" Padding="10"
                           Background="#FF9800" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnAchievements" Content="Achievements" Margin="5" Padding="10"
                           Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnCoachSession" Content="Coach Sessions" Margin="5" Padding="10"
                           Background="#607D8B" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnCommunity" Content="Community" Margin="5" Padding="10"
                           Background="#795548" Foreground="White" BorderThickness="0"/>
                    <Button Name="btnNotifications" Content="Notifications" Margin="5" Padding="10"
                           Background="#E91E63" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Border>
            
            <!-- Main Content Area -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Name="MainContent" Margin="20">
                    <!-- Dashboard Overview -->
                    <TextBlock Text="Your Progress Overview" FontSize="24" FontWeight="Bold" 
                              Foreground="#2E3B6C" Margin="0,0,0,20"/>
                    
                    <!-- Stats Cards -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Days Smoke Free -->
                        <Border Grid.Column="0" Background="#4CAF50" Padding="20" Margin="0,0,10,0" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Days Smoke-Free" FontSize="14" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Name="lblDaysSmokeFree" Text="0" FontSize="36" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Money Saved -->
                        <Border Grid.Column="1" Background="#2196F3" Padding="20" Margin="5,0" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Money Saved" FontSize="14" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Name="lblMoneySaved" Text="$0" FontSize="36" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Current Streak -->
                        <Border Grid.Column="2" Background="#FF9800" Padding="20" Margin="5,0" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Current Streak" FontSize="14" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Name="lblCurrentStreak" Text="0 days" FontSize="36" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Achievements -->
                        <Border Grid.Column="3" Background="#9C27B0" Padding="20" Margin="10,0,0,0" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Achievements" FontSize="14" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Name="lblAchievements" Text="0" FontSize="36" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Quick Actions -->
                    <TextBlock Text="Quick Actions" FontSize="18" FontWeight="Bold" 
                              Foreground="#2E3B6C" Margin="0,0,0,15"/>
                    
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="White" Padding="20" Margin="0,0,10,0" 
                               BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="📝" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="Log Today's Progress" FontSize="14" FontWeight="Bold" 
                                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <Button Content="Log Progress" Background="#4CAF50" Foreground="White" 
                                       BorderThickness="0" Padding="10,5"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="1" Background="White" Padding="20" Margin="5,0" 
                               BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="💬" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="Book Coach Session" FontSize="14" FontWeight="Bold" 
                                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <Button Content="Book Session" Background="#2196F3" Foreground="White" 
                                       BorderThickness="0" Padding="10,5"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="2" Background="White" Padding="20" Margin="10,0,0,0" 
                               BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="🌟" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="View Achievements" FontSize="14" FontWeight="Bold" 
                                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <Button Content="View Badges" Background="#9C27B0" Foreground="White" 
                                       BorderThickness="0" Padding="10,5"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Recent Activity -->
                    <TextBlock Text="Recent Activity" FontSize="18" FontWeight="Bold" 
                              Foreground="#2E3B6C" Margin="0,0,0,15"/>
                    
                    <Border Background="White" Padding="20" 
                           BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Welcome to your member dashboard!" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock Text="• Start by creating your personalized quit plan" FontSize="12" Margin="0,5"/>
                            <TextBlock Text="• Log your daily progress to track improvements" FontSize="12" Margin="0,5"/>
                            <TextBlock Text="• Connect with coaches for professional support" FontSize="12" Margin="0,5"/>
                            <TextBlock Text="• Engage with the community for motivation" FontSize="12" Margin="0,5"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>